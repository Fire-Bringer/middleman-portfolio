<!--Info Navbar-->
<div class="navigation-bar sticky-top">
  <nav>
    <ul>
      <div>
        <a class="" href="#">
          <%= image_tag 'blackcat.png', alt: "icon photo", class: 'icon-photo' %>
        </a>
