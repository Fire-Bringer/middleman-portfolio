<%= partial 'partials/info_navbar' %>

<section class="skills">
  <div class="container">
    <div class="row align-items-center">
        <div class="skills-content">
            <div class="row">
                <div class="section-title">
                    <h1>Harry's Sandwich Company</h1>
                    <p>
                      A homepage for an American restaurant within Harajuku in Tokyo. They specialize in sandwiches, craft beer and great community events with music and crafts. [Responsive]
                    </p>
                    <div class="tech-stack">
                      <% if data.projects[2].rails? %>
                        <i class="devicon-rails-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].html? %>
                        <i class="devicon-html5-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].css? %>
                        <i class="devicon-css3-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].javascript? %>
                        <i class="devicon-javascript-plain tech"></i>
                      <% end %>
                      <% if data.projects[2].sql? %>
                        <i class="devicon-azuresqldatabase-plain tech"></i>
                      <% end %>
                      <% if data.projects[2].figma? %>
                        <i class="devicon-figma-plain tech"></i>
                      <% end %>
                    </div>
                    <div class="project-links">
                      <% if data.projects[2].code? %>
                        <% link_to data.projects[2].github, target: '_blank' do %>
                          <i class="fa-brands fa-github project-link"></i>
                        <% end %>
                      <% end %>
                      <% if data.projects[2].online? %>
                        <% link_to data.projects[2].url, class: 'globe', target: '_blank' do %>
                          <i class="fa-solid fa-globe project-link"></i>
                        <% end %>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="img">
          <%= image_tag 'projects/harrys/harryss1.png' %>
          <!--<img src="images/skill.jpg" alt="skill">-->
        </div>
    </div>
  </div>
</section>

