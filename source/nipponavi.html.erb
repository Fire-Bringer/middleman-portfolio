<%= partial 'partials/info_navbar' %>

<section class="skills">
  <div class="container">
    <div class="row align-items-center">
        <div class="skills-content">
            <div class="row">
                <div class="section-title">
                    <h1>NippoNavi</h1>
                    <p>
                      TBA
                      <br><br>
                      FEATURES:
                      <br>
                      - TBA
                      <br>
                      - TBA
                      <br>
                      - TBA
                      <br>
                      - TBA
                      <br>
                      - TBA
                    </p>
                    <div class="tech-stack">
                      <% if data.projects[5].figma? %>
                        <i class="devicon-figma-plain tech"></i>
                      <% end %>
                      <% if data.projects[5].photoshop? %>
                        <i class="devicon-photoshop-plain"></i>
                      <% end %>
                      <% if data.projects[5].react? %>
                        <i class="devicon-react-original"></i>
                      <% end %>
                      <% if data.projects[5].nextjs? %>
                        <i class="devicon-nextjs-plain"></i>
                      <% end %>
                      <% if data.projects[5].typescript? %>
                        <i class="devicon-typescript-plain"></i>
                      <% end %>
                      <% if data.projects[5].rails? %>
                        <i class="devicon-rails-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[5].html? %>
                        <i class="devicon-html5-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[5].css? %>
                        <i class="devicon-css3-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[5].javascript? %>
                        <i class="devicon-javascript-plain tech"></i>
                      <% end %>
                    </div>
                    <div class="project-links">
                      <% if data.projects[5].code? %>
                        <% link_to data.projects[5].github, target: '_blank' do %>
                          <i class="fa-brands fa-github project-link"></i>
                        <% end %>
                      <% end %>
                      <% if data.projects[5].online? %>
                        <% link_to data.projects[5].url, class: 'globe', target: '_blank' do %>
                          <i class="fa-solid fa-globe project-link"></i>
                        <% end %>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="img">
          <%= image_tag 'projects/nipponavi/nipponavi-mockup.webp' %>
        </div>
    </div>
  </div>
</section>

<div class="gallery-wrap">
  <i class="fa-solid fa-circle-chevron-left info-arrow" id="backBtn"></i>
    <div class="gallery nipponavi-gallery">
      <div>
        <span><%= image_tag 'projects/nipponavi/Homepage.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Latest.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Index.webp' %></span>
      </div>
      <div>
        <span><%= image_tag 'projects/nipponavi/Article-Hero.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Article-Subheader.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Terms.webp' %></span>
      </div>
    </div>
  <i class="fa-solid fa-circle-chevron-right info-arrow" id="nextBtn"></i>
</div>

<%= partial 'partials/new_footer' %>

