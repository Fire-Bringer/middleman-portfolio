<%= partial 'partials/info_navbar' %>

<section class="skills">
  <div class="container">
    <div class="row align-items-center">
        <div class="skills-content">
            <div class="row">
                <div class="section-title">
                    <h1>NippoNavi</h1>
                    <p>
                      An onging team project to create a blog website to help migrants in Japan.
                    </p>
                    <div class="tech-stack">
                      <% if data.projects[6].rails? %>
                        <i class="devicon-rails-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[6].html? %>
                        <i class="devicon-html5-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[6].css? %>
                        <i class="devicon-css3-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[6].javascript? %>
                        <i class="devicon-javascript-plain tech"></i>
                      <% end %>
                      <% if data.projects[6].sql? %>
                        <i class="devicon-azuresqldatabase-plain tech"></i>
                      <% end %>
                      <% if data.projects[6].figma? %>
                        <i class="devicon-figma-plain tech"></i>
                      <% end %>
                    </div>
                    <div class="project-links">
                      <% if data.projects[6].code? %>
                        <% link_to data.projects[6].github, target: '_blank' do %>
                          <i class="fa-brands fa-github project-link"></i>
                        <% end %>
                      <% end %>
                      <% if data.projects[6].online? %>
                        <% link_to data.projects[6].url, class: 'globe', target: '_blank' do %>
                          <i class="fa-solid fa-globe project-link"></i>
                        <% end %>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="img">
          <%= image_tag 'projects/uq/uq_home.png' %>
          <!--<img src="images/skill.jpg" alt="skill">-->
        </div>
    </div>
  </div>
</section>

<div class="gallery-wrap">
  <i class="fa-solid fa-circle-chevron-left info-arrow" id="backBtn"></i>
    <div class="gallery">
      <div>
        <span><%= image_tag 'projects/nipponavi/Homepage.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Latest.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Index.webp' %></span>
      </div>
      <div>
        <span><%= image_tag 'projects/nipponavi/Article-Hero.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Article-Subheader.webp' %></span>
        <span><%= image_tag 'projects/nipponavi/Terms.webp' %></span>
      </div>
    </div>
  <i class="fa-solid fa-circle-chevron-right info-arrow" id="nextBtn"></i>
</div>

