<%= partial 'partials/info_navbar' %>

<section class="skills">
  <div class="container">
    <div class="row align-items-center">
        <div class="skills-content">
            <div class="row">
                <div class="section-title">
                    <h1>Ai Messenger</h1>
                    <p>
                      A landing page made for a freelance spiritual coach client. Designed with soft colors and a spiritual aestheic per her own images choices.
                      <br><br>
                      FEATURES:
                      <br>
                      - a simple fade-in animation of the hero image
                      <br>
                      - simple image galleries which break up the different sections
                      <br>
                      - a glassmorphic card used within the About section
                      <br>
                      - a simple menu section
                      <br>
                      - a contact me section
                    </p>
                    <div class="tech-stack">
                      <% if data.projects[2].figma? %>
                        <i class="devicon-figma-plain tech"></i>
                      <% end %>
                      <% if data.projects[2].photoshop? %>
                        <i class="devicon-photoshop-plain"></i>
                      <% end %>
                      <% if data.projects[2].react? %>
                        <i class="devicon-react-original"></i>
                      <% end %>
                      <% if data.projects[2].nextjs? %>
                        <i class="devicon-nextjs-plain"></i>
                      <% end %>
                      <% if data.projects[2].typescript? %>
                        <i class="devicon-typescript-plain"></i>
                      <% end %>
                      <% if data.projects[2].rails? %>
                        <i class="devicon-rails-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].html? %>
                        <i class="devicon-html5-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].css? %>
                        <i class="devicon-css3-plain-wordmark tech"></i>
                      <% end %>
                      <% if data.projects[2].javascript? %>
                        <i class="devicon-javascript-plain tech"></i>
                      <% end %>
                    </div>
                    <div class="project-links">
                      <% if data.projects[2].code? %>
                        <% link_to data.projects[2].github, target: '_blank' do %>
                          <i class="fa-brands fa-github project-link"></i>
                        <% end %>
                      <% end %>
                      <% if data.projects[2].online? %>
                        <% link_to data.projects[2].url, class: 'globe', target: '_blank' do %>
                          <i class="fa-solid fa-globe project-link"></i>
                        <% end %>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="img">
          <%= image_tag 'projects/aimessenger/Spirit-Mockup.webp' %>
        </div>
    </div>
  </div>
</section>

<div class="gallery-wrap">
  <i class="fa-solid fa-circle-chevron-left info-arrow" id="backBtn"></i>
    <div class="gallery">
      <div>
        <span><%= image_tag 'projects/aimessenger/Spirit-Hero.webp' %></span>
        <span><%= image_tag 'projects/aimessenger/Spirit-Gallery1.webp' %></span>
        <span><%= image_tag 'projects/aimessenger/Spirit-About.webp' %></span>
      </div>
      <div>
        <span><%= image_tag 'projects/aimessenger/Spirit-Gallery2.webp' %></span>
        <span><%= image_tag 'projects/aimessenger/Spirit-Menu.webp' %></span>
        <span><%= image_tag 'projects/aimessenger/Spirit-Gallery3.webp' %></span>
      </div>
    </div>
  <i class="fa-solid fa-circle-chevron-right info-arrow" id="nextBtn"></i>
</div>

<%= partial 'partials/new_footer' %>

<script src="/javascripts/info.js"></script>
